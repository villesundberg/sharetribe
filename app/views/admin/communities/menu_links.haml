- content_for :javascript do
  ST.menuLinkOptionOrder = ST.createMenuLinksOrder(".menu-link-container");

- content_for :title_header do
  %h1= t("layouts.admin.admin")

= render :partial => "layouts/left_hand_navigation", :locals => { :links => admin_links_for(@community) }

.left-navi-section
  %h2= t(".menu_links", :community_name => @community.name(I18n.locale))

  = form_for @community, :url => menu_links_admin_community_path(@community), :method => :put, html: {id: "menu-links-form"} do |form|

    #menu-links-table
      .row.menu-link-container-padding
        .col-10
          .col-2
            = label_tag do
              = "Language"
          .col-5
            = label_tag do
              = "Title"
          .col-5
            = label_tag do
              = "URL"

      .row#menu-links
        %script{type: "text/template", class: "template", id: "new-menu-link-tmpl"}
          = render :partial => "new_menu_link", :locals => { :menu_link => MenuLink.new, :menu_link_id => "${id}" }

        - @community.menu_links.each do |menu_link|
          = render :partial => "new_menu_link", :locals => { :menu_link => menu_link, :menu_link_id => menu_link.id }

    .row#menu-links-empty
      .col-12
        You don't have any additional menu links

    .row
      .col-12
        = link_to t("admin.communities.menu_links.add_menu_link"), "#", :id => "menu-links-add"

    .row
      .col-12
        = form.button t("admin.communities.menu_links.save")

